
dnf install lightdm zenity urxvt w3m w3m-img mutt offlineimap msmtp ranger network-manager-applet volumeicon xrandr arandr gnome-settings-daemon gnome-terminal xcompmgr
dnf -y install dnf-plugins-core
dnf -y copr enable flatcap/neomutt
dnf -y install neomutt

netExtender: Optional this client requires java, https://www.mysonicwall.com/muir/freedownloads

set ligthdm as display manager:
	dnf install lightdm
	systemctl disable [old display manager] << Default is GDM
	systemctl enable lightdm
	reboot

